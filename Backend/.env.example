# Database Configuration
DATABASE_URL=postgresql://gardenconnect:password@localhost:5432/gardenconnect
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=yoursupersecretjwtkeychangeinproduction
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# MQTT Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=gardenconnect
MQTT_PASSWORD=your-mqtt-password

# LoRa Configuration
LORA_FREQUENCY=868.0
LORA_SPREADING_FACTOR=9
LORA_BANDWIDTH=125000
LORA_DEVICE=/dev/ttyUSB0

# Services Ports
AUTH_SERVICE_PORT=8001
DATA_SERVICE_PORT=8002
ALERT_SERVICE_PORT=8003
MQTT_SERVICE_PORT=8004

# Email Configuration (pour les alertes)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Environment
ENVIRONMENT=development
DEBUG=true

# Logging
LOG_LEVEL=INFO

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60